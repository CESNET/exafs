{% from 'macros.j2' import nav_link %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="EXAFS tool for EXABGP messages">
    <meta name="author" content="CESNET / Jiri Vrany, Petr Adamec, Josef Verich">
    <meta name="google" content="notranslate">
    <meta http-equiv="Content-Language" content="en">
    <link rel="icon" href="../../favicon.ico">

    <title>{% block title %}{% endblock %}</title>

    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;700&display=swap"
          rel="stylesheet">
    <!-- Minified styles -->
    <link href="/static/style.min.css" rel="stylesheet">
    <!-- Bootstrap icons -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <script type="text/javascript" src="/static/js/exafs-bundle.js"></script>
</head>

<body>
<nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
        <a class="navbar-brand" href="/">{{ config['APP_NAME'] }} /
            ExaFS_{{ session['app_version'] }}</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbar" aria-controls="navbarNavDropdown"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbar">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                {% if session['can_edit'] %}
                    {{ nav_link('Add IPv4' ,'rules.ipv4_rule') }}
                    {{ nav_link('Add IPv6' ,'rules.ipv6_rule') }}
                    {{ nav_link('Add RTBH' ,'rules.rtbh_rule') }}
                    {{ nav_link('API Key' ,'api_keys.all') }}
                {% endif %}
                {% if 3 in session['user_role_ids'] %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown"
                           role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Admin
                        </a>
                        <ul class="dropdown-menu scale-in-top" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="{{ url_for('admin.log') }}">Commands
                                Log</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item"
                                   href="{{ url_for('admin.users') }}">Users</a></li>
                            <li><a class="dropdown-item" href="{{ url_for('admin.user') }}">Add
                                User</a></li>
                            <li><a class="dropdown-item"
                                   href="{{ url_for('admin.organizations') }}">Organizations</a>
                            </li>
                            <li><a class="dropdown-item" href="{{ url_for('admin.organization') }}">Add
                                Org.</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="{{ url_for('admin.actions') }}">Actions</a>
                            </li>
                            <li><a class="dropdown-item" href="{{ url_for('admin.action') }}">Add
                                action</a></li>
                            <li><a class="dropdown-item" href="{{ url_for('admin.communities') }}">RTBH
                                Communities</a></li>
                            <li><a class="dropdown-item" href="{{ url_for('admin.community') }}">Add
                                RTBH Comm.</a></li>
                        </ul>
                    </li>
                {% endif %}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownDDP"
                       role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        DDoS Protector
                    </a>
                    <ul class="dropdown-menu scale-in-top" aria-labelledby="navbarDropdownDDP">
                        <li>
                            <a class="dropdown-item"
                               href="{{ url_for('ddos-protector.presets') }}">Rule presets</a>
                        </li>
                        <li>
                            <a class="dropdown-item"
                               href="{{ url_for('ddos-protector.edit_preset') }}">Add a rule
                                preset</a>
                        </li>
                        <li>
                            <a class="dropdown-item"
                               href="{{ url_for('ddos-protector.devices') }}">Devices</a>
                        </li>
                        <li>
                            <a class="dropdown-item"
                               href="{{ url_for('ddos-protector.edit_devices') }}">Add device</a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <a target="_blank" class="dropdown-item"
                               href="https://www.liberouter.org/technologies/ddos-protector/">About
                                DDoS Protector <i class="bi bi-link-45deg"></i></a>
                        </li>
                    </ul>
                </li>
            </ul>
            <span class="navbar-text">
                {{ session['user_name'] }} &lt;{{ session['user_email'] }}&gt;,
                role: {{ session['user_roles']|join(", ") }}, org: {{ session['user_orgs'] }}</span>
        </div>

    </div>
</nav>
<div class="container theme-showcase" role="main">
    {% with messages = get_flashed_messages(with_categories=true) %}
        {% if messages %}
            {% for category, message in messages %}
                <div class="alert alert-dismissible fade show scale-in-top {{ category }}" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                            aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endif %}
    {% endwith %}

    {% block content %}{% endblock %}
</div>
<nav id="context-menu" class="context-menu">
    <ul class="context-menu__items">
        <li class="context-menu__item">
            <a href="#" class="context-menu__link" data-action="whois"><i class="fa fa-eye"></i>WHOIS</a>
        </li>
        <li class="context-menu__item">
            <a href="#" class="context-menu__link" data-action="copy"><i class="fa fa-copy"></i>Copy</a>
        </li>
    </ul>
</nav>
<script type="text/javascript" src="/static/js/ip_context.js"></script>
</body>
</html>
